{
  "lexicon": 1,
  "id": "com.hukoubook.fg.getTopicTrending",
  "defs": {
    "main": {
      "type": "query",
      "description": "get topic trending from db",
      "parameters": {
        "type": "params",
        "properties": {
          "min": {
            "type": "integer",
            "default": 3
          },
          "limit": {
            "type": "integer",
            "default": 100
          },
          "uri": {
            "type": "string",
            "format": "at-uri"
          },
          "search": {
            "type": "string"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["topics"],
          "properties": {
            "topics": {
              "type": "array",
              "items": { "type": "ref", "ref": "com.hukoubook.fg.defs#topicTrendingView" }
            }
          }
        }
      }
    }
  }
}
